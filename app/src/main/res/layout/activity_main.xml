<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/nurpul"
        style="@style/bg1"
        android:text="@string/nurpul"
        app:layout_constraintEnd_toStartOf="@+id/prateek"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/prateek"
        style="@style/bg1"
        android:text="@string/prateek"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nurpul"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/albert"
        style="@style/bg"
        android:text="@string/albert"
        app:layout_constraintBottom_toTopOf="@id/aman"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/prateek" />

    <TextView
        android:id="@+id/aman"
        style="@style/bg"
        android:text="@string/albert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/albert" />

</androidx.constraintlayout.widget.ConstraintLayout>